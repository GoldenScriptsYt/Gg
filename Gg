-- Load Orion Library
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

-- Create a new window
local Window = OrionLib:MakeWindow({Name = "Golden", IntroText = "Welcome to GodenScript", HidePremium = false})

-- Create a single tab named OP Skill Tab "
local Tab1 = Window:MakeTab({
    Name = "NoCoolDownSkills",
    Icon = "rbxassetid://4483345998", -- You can change this icon ID
    PremiumOnly = false
})

-- Gojo's skills
Tab1:AddButton({
    Name = "RED",
    Callback = function()
        game:GetService("ReplicatedStorage").Remotes.Red:FireServer()
        OrionLib:MakeNotification({
            Name = "Skill Activated",
            Content = "RED: Unleashes a powerful beam that obliterates everything in its path, reflecting Gojo's immense strength and precision.",
            Time = 5
        })
    end
})

Tab1:AddButton({
    Name = "BLUE",
    Callback = function()
        game:GetService("ReplicatedStorage").Remotes.Blue:FireServer()
        OrionLib:MakeNotification({
            Name = "Skill Activated",
            Content = "BLUE: Creates a vacuum that pulls enemies toward a central point, showcasing Gojo's control over space.",
            Time = 5
        })
    end
})

Tab1:AddButton({
    Name = "INFINITE VOID",
    Callback = function()
        game:GetService("ReplicatedStorage").Events.UnlimitedVoid:FireServer()
        OrionLib:MakeNotification({
            Name = "Skill Activated",
            Content = "INFINITE VOID: Traps opponents in an endless void, bombarding them with overwhelming information, demonstrating Gojo's mastery.",
            Time = 5
        })
    end
})

Tab1:AddButton({
    Name = "HOLLOW PURPLE NUKE",
    Callback = function()
        game:GetService("Players").LocalPlayer.Character:FindFirstChild("Six Eyes"):FindFirstChild("Awakening : Serious Mode").Event:FireServer()
